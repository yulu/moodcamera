<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bk"
    tools:context=".MoodCamera" >


	<Gallery
	    android:id="@+id/gallery"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/gallary_bg_b"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="10dip"
	    android:spacing="10dip" />

    <TableLayout
        android:id="@+id/option_menu" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/gallery" >

        <TableRow>
        <ImageButton
        	android:id="@+id/camera"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_marginBottom="10dip"
			android:padding="10dip"
        	android:background="@null"
        	android:clickable="true"
        	android:src="@drawable/camera_selector" />
        <ImageButton
            android:id="@+id/shutter"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="10dip"
        	android:background="@null"
        	android:clickable="true"
        	android:src="@drawable/shutter_selector" />
        <ImageButton
        	android:id="@+id/sticker"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="10dip"
        	android:padding="10dip"
        	android:clickable="true"
        	android:background="@null"
        	android:src="@drawable/sticker_selector" />
        </TableRow>
   </TableLayout>  
      
</RelativeLayout>