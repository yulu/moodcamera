<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bk">

   <ImageButton
        			android:id="@+id/wbLogin"
        			android:layout_width="wrap_content"
       				android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft= "30dp"
                    android:layout_marginRight= "30dp"
                    android:src="@drawable/wb_login_selector"/>

    <ImageView
                    android:id="@+id/wbProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#ef5357"
                    android:textSize="18sp"
                    android:src="@drawable/wbprofile"/>
    <EditText 
        			android:id="@+id/wb_message"
        			android:layout_marginTop="20dp"
        			android:layout_marginLeft="30dip"
        			android:layout_marginRight="30dip"
        			android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:text="@string/default_wb"
        />
    
   <ImageButton
        			android:id="@+id/wbUpload"
        			android:layout_width="wrap_content"
       				android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
        			android:src="@drawable/wb_upload_selector"/>
</LinearLayout>